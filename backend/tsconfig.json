    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "rootDir": ".",
      "outDir": "bin",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "types/**/*.d.ts"],
    "exclude": ["node_modules", "bin"]
  }
  